<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenish"
    android:orientation="vertical"
    tools:context=".AutoSlideshow">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:text="TOGETHERE WE CONSERVE ENVIRONMENT"
        android:textSize="16dp"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent">
    </TextView>

    <ViewFlipper
        android:id="@+id/myflipper"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/display"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/myflipper"
        android:background="@color/colorAccent"
        android:text="Choose The Interval of Garbage Collection"
        android:textAlignment="center"
        android:textSize="25dp"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
<androidx.cardview.widget.CardView
    android:layout_width="180dp"
    android:layout_height="180dp"
    >
    <RadioButton
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:text="Two days in a week"
    ></RadioButton>
    <RadioButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="three days a week"
        ></RadioButton>


</androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            >
            <RadioButton
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="weekly"
                ></RadioButton>
            <RadioButton
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Every two weeks"
                ></RadioButton>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
    android:id="@+id/button"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:layout_below="@+id/spinner"
    android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
     android:layout_centerHorizontal="true"
    ></Button>



</LinearLayout>